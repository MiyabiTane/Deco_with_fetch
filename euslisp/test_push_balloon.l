(defun catch-balloon (thresh)
  ;; thresh: diff between ideal and real [cm]
  (let* ((diff_width 0)
	 (real_width)
	 (ideal_width 0.1)
	 (grasp-result))
    (while (and (< diff_width thresh) (> ideal_width 0))
      (setq ideal_width (- ideal_width 0.01))
      (setq grasp-result (send *ri* :go-grasp :pos ideal_width))
      (ros::duration-sleep 0.7)
      (setq real_width (send grasp-result :position))
      (setq diff_width (- real_width ideal_width))
      (format t "ideal: ~A, real: ~A~%" ideal_width real_width)
      (format t "diff_width: ~A~%" diff_width)
      )
    ))

(defun push-balloon (thresh1 thresh2)
  ;; thresh: diff between ideal and real [mm]
  (let* ((diff_x 0)
	 (real_x (elt (get-arm-end-pos) 0))
	 (ideal_x real_x)
	 (diff_wall_x 0)
	 (init_wall_x (get-distance-wall 320 240))
	 (real_wall_x init_wall_x))
    (while (and (< diff_x thresh1) (< diff_wall_x thresh2))
      (send *fetch* :rarm :move-end-pos #f(20 0 0) :world)
      (send-robot 1000)
      (setq ideal_x (+ ideal_x 20))
      (setq real_x (elt (get-arm-end-pos) 0))
      (setq diff_x (- ideal_x real_x))
      (format t "diff_x: ~A~%" diff_x)
      (setq real_wall_x (get-distance-wall 320 240))
      (setq diff_wall_x (- real_wall_x init_wall_x))
      (format t "diff_wall_x ~A~%" diff_wall_x)
      )
    ))

(defun set-balloon (goal_pos)
  (let* ((goal_pos (v- goal_pos #f(1000 -313.6 0)))
	 (move_rot (atan (/ (elt goal_pos 1) (elt goal_pos 0))))
	 (move_len (norm (v- goal_pos (float-vector 0 0 (elt goal_pos 2)))))
	 (wall_distance)
	 (arm_end_pos)
	 (torso_z)
	 (rarm_up 0))
    (format t "goal pos: ~A~%" goal_pos)
    (format t "move_rot: ~A, move_len: ~A~%" (/ (* 180.0 move_rot) pi) move_len)
    (go-vel-rotate move_rot)
    (go-vel-linear (/ move_len 1000.0) 3)
    (setq arm-end-pos (get-arm-end-pos))
    (send *fetch* :head :look-at (v+ *look-at-pos*
				     (float-vector 0 (+ (elt arm-end-pos 1) 100) 0)))
    (send-robot 1000)
    (setq arm_end_pos (get-arm-end-pos))
    (setq torso_z (send *fetch* :torso :waist-z :joint-angle))
    (if (> (- (elt goal_pos 2) (elt arm_end_pos 2)) 386.15)
	(setq rarm_up (- (- (elt goal_pos 2) (elt arm_end_pos 2)) 386.15)))
    (if (< (- (elt goal_pos 2) (elt arm_end_pos 2)) 0)
	(setq rarm_up (+ (- (elt goal_pos 2) (elt arm_end_pos 2)) 20)))
    (send *fetch* :torso :waist-z :joint-angle (- (elt goal_pos 2) (elt arm_end_pos 2)))
    (send-robot 2000)
    (rotate-ref-wall)
    (go-vel-linear *MOVE-X-OFFSET* 2)
    (send *fetch* :rarm :move-end-pos (float-vector 50 0 rarm_up) :world)
    (send-robot 4000)
    (push-balloon 0.2 10.0)
    (send *ri* :stop-grasp)
    (send *fetch* :rarm :move-end-pos #f(-50 0 0) :world)
    (send-robot 2000)
    (send *fetch* :rarm :move-end-pos #f(0 0 -100) :world)
    (send-robot 2000)
    (send *fetch* :rarm :move-end-pos #f(-200 0 0) :world)
    (send-robot 2000)
    goal_pos)
  )

(defun repush-balloon ()
  (send *fetch* :rarm :move-end-pos #f(0 0 100) :world)
  (send-robot 2000)
  (send *fetch* :rarm :move-end-pos #f(50 0 0) :world)
  (send-robot 2000)
  (push-balloon 0.2 10.0)
  (send *fetch* :rarm :move-end-pos #f(-100 0 0) :world)
  (send-robot 2000)
  (send *fetch* :reset-pose)
  (send *fetch* :torso :waist-z :joint-angle *torso-z*)
  (send-robot 4000)
  )

(defun go-back (goal_pos)
  (let* ((goal_pos goal_pos)
	 (move_len)
	 (move_rot)
	 (wall_x))
    (go-vel-linear (* -1 *MOVE-X-OFFSET*) 2)
    (setq goal_pos (float-vector
		    (* -1 (elt goal_pos 0)) (* -1 (elt goal_pos 1)) 0))
    (format t "goal_pos: ~A~%" goal_pos)
    (setq move_len (* -1 (norm goal_pos)))
    (setq move_rot (atan (/ (elt goal_pos 1) (elt goal_pos 0))))
    (format t "move_len: ~A~%" move_len)
    (format t "move_rot: ~A, move_len: ~A~%" (/ (* 180.0 move_rot) pi) move_len)
    (go-vel-rotate move_rot)
    (go-vel-linear (/ move_len 1000.0) 2)
    (rotate-ref-wall)
    (setq wall_x (get-distance-wall 320 240))
    (format t "move_x: ~A~%" (- wall_x *wall-x*))
    (go-vel-linear (/ (- wall_x *wall-x*) 1000.0) 1)
    ))

(defun push-balloon-main ()
  (send *fetch* :head :look-at *look-at-pos*)
  (send-robot 4000)
  ;; set goal_pos
  (setq *wall-x* (get-distance-wall 320 240))
  (setq goal_pos (float-vector *wall-x* 50 1000))
  (format t "goal_pos: ~A~%" goal_pos)
  (before-catch-pose)
  (send *ri* :speak-jp "風船を渡して下さい")
  (format t "風船を渡して下さい~%")
  (ros::duration-sleep 5.0)
  (catch-balloon 0.02)
  (before-push-pose)
  (setq goal_pos (set-balloon goal_pos))
  (repush-balloon)
  (go-back goal_pos)
  )

